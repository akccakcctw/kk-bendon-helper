{
  "name": "訂便當小幫手",
  "short_name": "訂便當小幫手",
  "version": "1.0.0",
  "description": "填資料是快樂的事，不用填資料是更快樂的事",
  "homepage_url": "https://github.com/akccakcctw/kk-bendon-helper",
  "manifest_version": 3,

  "icons": {
    "16": "assets/icons/favicon-16.png",
    "32": "assets/icons/favicon-32.png",
    "48": "assets/icons/favicon-48.png",
    "128": "assets/icons/favicon-128.png"
  },

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "http://kkdayclub.rezio.shop/*",
    "https://kkdayclub.rezio.shop/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },

  "__chrome|firefox__author": "RexTsou",
  "__opera__developer": {
    "name": "RexTsou"
  },

  "__firefox__applications": {
    "gecko": {
      "id": "{754FB1AD-CC3B-4856-B6A0-7786F8CA9D17}"
    }
  },

  "__chrome__minimum_chrome_version": "88",
  "__opera__minimum_opera_version": "88",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/favicon-16.png",
      "32": "assets/icons/favicon-32.png",
      "48": "assets/icons/favicon-48.png",
      "128": "assets/icons/favicon-128.png"
    },
    "default_title": "訂便當小幫手"
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "background": {
    "service_worker": "js/background.bundle.js",
    "type": "module"
  },

  "content_scripts": [{
    "matches": [
      "http://kkdayclub.rezio.shop/*",
      "https://kkdayclub.rezio.shop/*"
    ],
    "js": [
      "js/contentScript.bundle.js"
    ]
  }],

  "web_accessible_resources": [{
    "resources": [
      "assets/icons/favicon-16.png",
      "assets/icons/favicon-32.png",
      "assets/icons/favicon-48.png",
      "assets/icons/favicon-128.png"
    ],
    "matches": [
      "http://kkdayclub.rezio.shop/*",
      "https://kkdayclub.rezio.shop/*"
    ]
  }]
}
